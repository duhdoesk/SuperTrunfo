<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/grow_dark_gray"
    android:gravity="center">

    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/cardview_card"
            android:layout_width="380dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            card_view:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/cardview_text"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:background="@color/translucent_gray"
            android:paddingStart="10dp"
            android:text="Collection Title"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>